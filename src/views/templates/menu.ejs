
<meta charset="UTF-8" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">


<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

<% if (user && user.pref) { %>
    <%- include("layouts/"+user.pref) %>
<% } else { %>
    <%- include layouts/main %>
<% } %>

  <!-- Header Starts -->
<div class="navbar-wrapper">
      <div class="container">

        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" id="top-nav">
          <div class="container">
            <div class="navbar-header">
              <!-- Logo Starts -->
              <a class="navbar-brand" id='logoContainer' href="#home"><img id="logoimg" src="/images/HipsterGlassesDude.png" height="80px" style="margin-top: -30px"><span id='logo'>TutorHub</span></a>
              <!-- #Logo Ends -->


              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>

            </div>


            <!-- Nav Starts -->
            <div class="navbar-collapse  collapse">
              <ul class="nav navbar-nav navbar-right">
                <li class="scroll"><a href="/#home">Home</a></li>
                <% if (menuOpts.homepage) { %>
                  <li class="scroll"><a href="#courses">Courses</a></li>
                  <li class="scroll"><a href="#tutors">Tutors</a></li>
                <% } %>

                <%- menuOpts.generateLinks() %>

                 <% if (user && user.username) { %>
                  <%- menuOpts.generateDropdowns() %>
                 <% } else { %>
                  <% if (menuOpts.homepage) { %> <li class="scroll"><a href="#signUp">Sign Up</a></li> <% } %>
                  <li><a href="/auth">Sign In</a></li>
                 <% } %>
              </ul>
            </div>
            <!-- #Nav Ends -->

          </div>
        </div>

      </div>
    </div>
<!-- #Header Starts -->

<div class="menu-spacer"></div>

<script type="text/javascript">
  <% if (!menuOpts.homepage) { %>
    var spacerDiv = document.querySelector(".menu-spacer");
    var menu = document.querySelector(".navbar");
    var resizeSpacer = function() {spacerDiv.style.height = 20+menu.offsetHeight + "px";};

    window.addEventListener("resize", function() {
      resizeSpacer();
    });
    resizeSpacer();
  <% } %>
</script>
